<form id="form-products" style="margin: auto">
  <div style="margin-bottom: 16px">
    <div class="col-md-2 mx-auto">
      <label for="title"> Title: </label>
      <input
        type="text"
        name="title"
        id="form-title"
        style="margin-bottom: 16px"
        class="form-control"
      />
    </div>
    <div class="col-md-2 mx-auto">
      <label for="price"> Price: </label>
      <input
        type="number"
        name="price"
        id="form-price"
        style="margin-bottom: 16px"
        step="1"
        class="form-control"
      />
    </div>
    <div class="col-md-2 mx-auto">
      <label for="thumbnail"> image: </label>
      <input
        type="text"
        name="thumbnail"
        id="form-thumbnail"
        style="margin-bottom: 16px"
        class="form-control"
      />
    </div>
    <div style="display: flex; justify-content: center; align-items: center">
      <input type="submit" value="Crear producto" class="btn btn-primary" />
    </div>
  </div>
</form>

<div>
  {{#if data}}
    <h1 class="textProducts">Products</h1>
    <div class="products-container" id="products">
    {{#each data}}
      <div class="card" style="width: 18rem;">
        <img src={{thumbnails}} class="card-img-top" alt="..." />
        <div class="card-body">
          <h5 class="card-title">{{title}}</h5>
          <p class="card-text">${{price}}</p>
        </div>
      </div>
    {{/each}}
    </div>
  {{else}}
    No products
  {{/if}}
</div>
